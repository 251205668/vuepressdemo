$accentColor = #1abc9c
$textColor = #2f3640
$borderColor = #eaecef
$codeBgColor = #282c34 // 代码背景颜色
::-webkit-scrollbar
  width: 10px
  height: 10px
  border-radius: 10px
  background-color: #F5F5F5
/* 定义滚动条轨道 内阴影+圆角 */
::-webkit-scrollbar-track
  border-radius: 10px
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3)
  background-color: #F5F5F5
/* 定义滑块 内阴影+圆角 */
::-webkit-scrollbar-thumb
  border-radius: 10px
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3)
  border-radius: 10px
  /* 线性渐变 */
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.86, #1abc9c),
    color-stop(0.86, #1abc9c),
    color-stop(0.86, #1abc9c)
  )
  transition: 0.3s ease-in-out
/* 定义滑块悬浮样式 */
::-webkit-scrollbar-thumb:hover
  background-image: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(0.86, #1abc9c),
    color-stop(0.86, #1abc9c),
    color-stop(0.86, #1abc9c)
  )
  transition: 0.3s ease-in-out
